generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  name             String
  password         String
  teams            teams?
  feedbacksSession feedbacksSession?
  usersTeamMapping usersTeamMapping?
}

model usersTeamMapping {
  teamId Int   @unique
  teams  teams @relation(fields: [teamId], references: [id])
  userId Int   @unique
  users  users @relation(fields: [userId], references: [id])
}

model teams {
  id               Int               @id @default(autoincrement())
  name             String
  userId           Int               @unique
  users            users             @relation(fields: [userId], references: [id])
  sessions         sessions?
  usersTeamMapping usersTeamMapping?
}

model sessions {
  id               Int               @id @default(autoincrement())
  date             DateTime
  place            String
  description      String
  name             String
  teamId           Int               @unique
  teams            teams             @relation(fields: [teamId], references: [id])
  feedbacksSession feedbacksSession?
}

model feedbacksSession {
  id        Int      @id @default(autoincrement())
  shape     Int
  tiredness Int
  stress    Int
  sensation String
  injury    String?
  date      DateTime
  userId    Int      @unique
  sessionId Int      @unique
  users     users    @relation(fields: [userId], references: [id])
  sessions  sessions @relation(fields: [sessionId], references: [id])
}
