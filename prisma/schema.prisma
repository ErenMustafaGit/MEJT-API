generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  name            String
  Team            Team?
  FeedbackSession FeedbackSession?
  UserTeamMapping UserTeamMapping?
}

model UserTeamMapping {
  teamId Int  @unique
  team   Team @relation(fields: [teamId], references: [id])
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Team {
  id              Int              @id @default(autoincrement())
  name            String
  userId          Int              @unique
  user            User             @relation(fields: [userId], references: [id])
  Session         Session?
  UserTeamMapping UserTeamMapping?
}

model Session {
  id              Int              @id @default(autoincrement())
  date            DateTime
  place           String
  description     String
  name            String
  teamId          Int              @unique
  team            Team             @relation(fields: [teamId], references: [id])
  FeedbackSession FeedbackSession?
}

model FeedbackSession {
  id        Int      @id @default(autoincrement())
  shape     Int
  tiredness Int
  stress    Int
  sensation String
  injury    String?
  date      DateTime
  userId    Int      @unique
  sessionId Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  session   Session  @relation(fields: [sessionId], references: [id])
}
